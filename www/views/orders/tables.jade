ion-view(view-title="Open Tables" cache-view="false")
	ion-nav-buttons(side="primary")
		button.button.button-balanced(ng-click="popover.show($event)") Open Table
	ion-nav-buttons(side="secondary")
		button.button.button-icon.icon.ion-ios-cog-outline(ng-click="openConfig()" target="_system")

	ion-content
		.card(ng-repeat="table in openTables" ui-sref="tabs.orders({table_id: table.id})" direction="forward")
			.item.item-divider \#{{ table.table_number }} - {{ table.name }}
				small(ng-if="table.covers") &nbsp;({{ table.covers }} cover
					span(ng-if="table.covers > 1") s
					| )
			.item.item-text-wrap
				span(ng-if="table.last_printed_order") Last printed {{ table.last_printed_order_formatted }}
				small(ng-if="!table.last_printed_order") Never Printed
				.item-note {{ table.printedOrders }} / {{ table.orders }}

		.card(ng-if="openTables.length == 0")
			.item.item-text-wrap(style="text-align: center;") No Open Tables